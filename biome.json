{
    "files": {
        "ignore": ["dist/**", "docs/**", "catlog-wasm/**", "**/queries.ts"]
    },
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "a11y": {
                "all": false
            },
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "warn"
            },
            "complexity": {
                "noForEach": "warn",
                "useLiteralKeys": {
                    "level": "off"
                }
            },
            "style": {
                "noParameterAssign": {
                    "level": "off"
                },
                "noUselessElse": {
                    "level": "off"
                }
            }
        }
    }
}
