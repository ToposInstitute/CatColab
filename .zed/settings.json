{
    "languages": {
        "TypeScript": {
            "language_servers": [
                "!deno",
                "!typescript-language-server",
                "vtsls",
                "!eslint",
                "!tailwindcss-language-server"
            ],
            "formatter": "language_server"
        },
        "TSX": {
            "language_servers": [
                "!deno",
                "!typescript-language-server",
                "vtsls",
                "!eslint",
                "!tailwindcss-language-server"
            ],
            "formatter": "language_server"
        },
        "JavaScript": {
            "language_servers": [
                "!deno",
                "!typescript-language-server",
                "vtsls",
                "!eslint",
                "!tailwindcss-language-server"
            ],
            "formatter": "language_server"
        }
    }
}
